<div class="banner">
  <div class="container-display-card">
    <div class="display-card">
      <div class="display-card-name" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
               url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <h1><%= @cocktail.name %></h1>
        <%= link_to "Cocktails", cocktails_path %>
      </div>
      <div class="display-card-text">
        <div class="display-card-doses">
          <ul>
          <% @cocktail.doses.each do |dose| %>
          <li><%=dose.ingredient.name%> - <%= dose.description %> - <%= link_to "Delete Dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
          <% end %>
          </ul>
        </div>

        <div class="display-card-add">
          <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail) %>
        </div>
      </div>
    </div>
  </div>
</div>

