<div class="container d-flex justify-content-center align-items-center direction-column">
  <div class="typed-container d-flex align-items-center">
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <div class="logo-pink-large">
      <i class="fas fa-cocktail"></i>
    </div>
  </div>
  <div class="form-container">
    <%= simple_form_for @cocktail, defaults: { input_html: { class: 'form-control' } } do |f| %>
      <div class="form-group input-width-large">
        <%= f.input :name, placeholder: 'Pina Colada' %>
      </div>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      <div class="d-flex justify-content-center">
        <%= f.button :submit, class: 'btn btn-success'%>
      </div>
    <% end %>
  </div>
</div>
