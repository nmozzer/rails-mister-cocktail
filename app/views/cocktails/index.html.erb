<div class="container d-flex">
  <div class="card-padding">
    <% @cocktails.each do |cocktail|  %>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1541807243774-518bdde38627?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1947&q=80" alt="Card image cap">
        <div class="card-body">
          <div class="text-top">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <h6>Ingredients:</h6>
            <% cocktail.ingredients.each do |ingredient| %>
              <p><%=ingredient.name%><p>
            <% end %>
          </div>
          <div class="link-bottom">
            <%= link_to "View ingredients", cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
